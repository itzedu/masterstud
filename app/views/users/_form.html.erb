
<%= render 'shared/errors', object: @user %>

<ul>
  <%= form_for(@user) do |form| %>
    <li><%= form.label :email%>
    <%= form.text_field :email %></li>

    <li><%= form.label :password%>
    <%= form.password_field :password%></li>

    <li><%= form.label :password_confirmation, "Confirm Password"%>
    <%= form.password_field :password_confirmation %></li>
    
    <%= form.submit %>
  <% end %>
</ul>