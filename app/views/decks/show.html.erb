<p> <%= link_to "All Decks", decks_url %> </p> 

<h1><%= @deck.name %></h1>

<div> 
  <p> <%= link_to "Edit Deck", edit_deck_path(@deck) %> </p> 
  <p> <%= link_to "Delete", deck_path, method: :delete, confirm: "Are you sure?" %> </p>
</div>

<h2>Cards</h2>

<%= link_to "New Card", new_deck_card_path([@deck, @card]) %>

<% @cards.each do |card| %>
  <div>
    <ul><li>
    <%= link_to card.front, deck_card_path(@deck, card) %> #
    <%= link_to "Edit", edit_deck_card_path(@deck, card) %> #
    <%= link_to "Delete", deck_card_path(@deck, card), method: :delete, confirm: "Are you sure?" %>
    </li></ul>
  </div>
<% end %>
